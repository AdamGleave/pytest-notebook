{
    "editor.rulers": [88],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    "restructuredtext.confPath": "${workspaceFolder}/docs",
    "python.pythonPath": "/anaconda/envs/pytest_nb/bin/python",
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "restructuredtext.linter.extraArgs": ["--max-line-length", "88"],
    "cSpell.words": [
        "Jupyter",
        "conda",
        "pytest"
    ]
}
